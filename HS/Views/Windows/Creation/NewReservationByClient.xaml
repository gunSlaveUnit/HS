<Window x:Class="HS.Views.Windows.Creation.NewReservationByClient"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        DataContext="{Binding NewReservByClientViewModel, Source={StaticResource Locator}}"
        Title="Create a reservation" Height="600" Width="400" WindowStartupLocation="CenterScreen">
    <Window.InputBindings>
        <KeyBinding Modifiers="Control" Key="Q" 
                    Command="{StaticResource CloseAppCommand}"/>
    </Window.InputBindings>
    <StackPanel Margin="20" VerticalAlignment="Center"
                Width="300">
        <TextBlock FontSize="40" Text="Hotel"></TextBlock>
        <TextBlock FontSize="20" Text="I see you want to check in with us"></TextBlock>
        <TextBlock Foreground="DarkGray" FontSize="20" Text="Let's arrange it"></TextBlock>
        <StackPanel Margin="0 70 0 0">
            
            <Button Background="DarkBlue" BorderBrush="DarkBlue" 
                    Width="120" Margin="0 50 0 0" Command="{Binding CreateNewReservCommand}"
                    FontSize="20" Content="Reservate" Height="40" Foreground="WhiteSmoke"/>
        </StackPanel>
    </StackPanel>
</Window>
