<UserControl x:Class="HS.Views.Pages.ReservationsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:fa="http://schemas.fontawesome.com/icons/"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <StackPanel Height="700">
        <DataGrid ItemsSource="{Binding Reservations}" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Въезд" Binding="{Binding ArrivalDate}"></DataGridTextColumn>
                <DataGridTextColumn Header="Выезд" Binding="{Binding DepartureDate}"></DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
        <Button Height="50" Width="50" Background="DarkBlue" BorderBrush="DarkBlue">
            <fa:ImageAwesome Icon="Solid_PlusCircle" Foreground="WhiteSmoke"/>
        </Button>
        <Button Height="50" Width="50" Background="DarkBlue" BorderBrush="DarkBlue">
            <fa:ImageAwesome Icon="Solid_TrashALt" Foreground="WhiteSmoke"/>
        </Button>
    </StackPanel>
</UserControl>
